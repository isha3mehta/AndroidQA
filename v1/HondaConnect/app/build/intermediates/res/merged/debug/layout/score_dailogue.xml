<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_box"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/colorGrayShade"
       android:orientation="horizontal">

       <TextView
           android:id="@+id/score_popup_tv_score"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@color/colorGrayShade"
           android:text="Score"
           android:padding="@dimen/login_activity_vertical_margin_forgot_passwd"
           android:textSize="@dimen/msil_text_size_large"
           android:textColor="@color/white"/>

       <TextView
           android:id="@+id/score_popup_tv_interpretation"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/info_status_padding"
           android:text="Interpretation"
           android:gravity="center_horizontal"
           android:padding="@dimen/login_activity_vertical_margin_forgot_passwd"
           android:textSize="@dimen/msil_text_size_large"
           android:textColor="@color/white"/>

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_box"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_red"
            android:text="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/msil_text_size_large"
            android:layout_margin="@dimen/login_activity_vertical_margin_input_fields"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/update_margin_left"
            android:text="@string/needs_improvement"
            android:gravity="center_horizontal"
            android:padding="@dimen/login_activity_vertical_margin_forgot_passwd"
            android:textSize="@dimen/msil_text_size_large"
            android:textColor="@color/grey_text_color"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGrayShade" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorGrayShade" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_orange"
            android:text="2"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/msil_text_size_large"
            android:layout_margin="@dimen/login_activity_vertical_margin_input_fields"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/update_margin_left"
            android:text="@string/fair"
            android:gravity="center_horizontal"
            android:padding="@dimen/login_activity_vertical_margin_forgot_passwd"
            android:textSize="@dimen/msil_text_size_large"
            android:textColor="@color/grey_text_color"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGrayShade" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorGrayShade" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_yellow"
            android:text="3"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/msil_text_size_large"
            android:layout_margin="@dimen/login_activity_vertical_margin_input_fields"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/update_margin_left"
            android:text="@string/performer"
            android:gravity="center_horizontal"
            android:padding="@dimen/login_activity_vertical_margin_forgot_passwd"
            android:textSize="@dimen/msil_text_size_large"
            android:textColor="@color/grey_text_color"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGrayShade" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorGrayShade" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_parrot"
            android:text="4"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/msil_text_size_large"
            android:layout_margin="@dimen/login_activity_vertical_margin_input_fields"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/update_margin_left"
            android:text="@string/star_performer"
            android:gravity="center_horizontal"
            android:padding="@dimen/login_activity_vertical_margin_forgot_passwd"
            android:textSize="@dimen/msil_text_size_large"
            android:textColor="@color/grey_text_color"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGrayShade" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorGrayShade" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_green"
            android:text="5"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/msil_text_size_large"
            android:layout_margin="@dimen/login_activity_vertical_margin_input_fields"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/update_margin_left"
            android:text="@string/excellent"
            android:gravity="center_horizontal"
            android:padding="@dimen/login_activity_vertical_margin_forgot_passwd"
            android:textSize="@dimen/msil_text_size_large"
            android:textColor="@color/grey_text_color"/>

    </LinearLayout>

    <Button
        android:id="@+id/score_popup_btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrayShade"
        android:text="@string/close"
        android:textColor="@color/white"
        android:textSize="@dimen/msil_text_size_large"/>


</LinearLayout>
